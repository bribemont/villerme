<%= form_for(@newsletter) do |f| %>
  <% if @newsletter.errors.any? %>
    <div id="error_explanation">
      <h2>L’enregistrement a échoué : <%= pluralize(@newsletter.errors.count, "erreur") %></h2>

      <ul>
      <% @newsletter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :a %><br />
    <%= f.text_area :a, style: "height:100px" %>
  </div>
  <div>
    <%= f.label :content %><br />
    <%= f.text_area :content, style: "height:300px" %>
  </div>
  <div style="text-align:center;margin:1em;">
    <%= f.submit "Envoyer", class: "yui3-button" %>
  </div>
<% end %>
