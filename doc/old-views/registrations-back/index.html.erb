<h1>Listing registrations</h1>

<table>
  <tr>
    <th>Institution</th>
    <th>Activity</th>
    <th>Address</th>
    <th>Zip</th>
    <th>City</th>
    <th>Last name</th>
    <th>First name</th>
    <th>Function</th>
    <th>Phone</th>
    <th>Fax</th>
    <th>Email</th>
    <th>Hardship</th>
    <th>Dedication</th>
    <th>Festival</th>
    <th>Charge</th>
    <th>Payment</th>
    <th>Invoice</th>
    <th>Lunch 1</th>
    <th>Lunch 2</th>
    <th>Guest</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @registrations.each do |registration| %>
  <tr>
    <td><%= registration.institution %></td>
    <td><%= registration.activity %></td>
    <td><%= registration.address %></td>
    <td><%= registration.zip %></td>
    <td><%= registration.city %></td>
    <td><%= registration.last_name %></td>
    <td><%= registration.first_name %></td>
    <td><%= registration.function %></td>
    <td><%= registration.phone %></td>
    <td><%= registration.fax %></td>
    <td><%= registration.email %></td>
    <td><%= registration.hardship %></td>
    <td><%= registration.dedication %></td>
    <td><%= registration.festival %></td>
    <td><%= registration.charge %></td>
    <td><%= registration.payment %></td>
    <td><%= registration.invoice %></td>
    <td><%= registration.lunch_1 %></td>
    <td><%= registration.lunch_2 %></td>
    <td><%= registration.guest %></td>
    <td><%= link_to 'Show', registration %></td>
    <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
    <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

